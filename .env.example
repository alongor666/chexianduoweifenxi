# ================================
# 应用配置
# ================================

# 应用名称
NEXT_PUBLIC_APP_NAME=车险多维分析平台

# 应用版本（自动从 package.json 读取）
# NEXT_PUBLIC_APP_VERSION=0.1.0

# 开发环境配置
NODE_ENV=development

# ================================
# 数据源配置
# ================================

# 数据来源
# 可选值: 'supabase' | 'local'
# - supabase: 从 Supabase 数据库获取数据
# - local: 仅使用本地 CSV 上传的数据（默认）
NEXT_PUBLIC_DATA_SOURCE=local

# ================================
# Supabase 配置
# ================================
# 仅当 NEXT_PUBLIC_DATA_SOURCE=supabase 时需要配置

# Supabase 项目 URL
# NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase 匿名密钥
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase 数据库连接字符串（服务端使用）
# DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# ================================
# 功能开关
# ================================

# 部署模式
# 可选值: 'static' | 'server'
# - static: 纯静态部署，禁用服务器端功能（API routes）
# - server: 服务器部署，启用所有功能（默认）
NEXT_PUBLIC_DEPLOY_MODE=static

# 启用性能监控
# NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# 启用调试模式
# NEXT_PUBLIC_ENABLE_DEBUG=false

# 启用分析功能
# NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ================================
# API 配置
# ================================

# API 基础路径
# NEXT_PUBLIC_API_BASE_URL=/api

# API 超时时间（毫秒）
# NEXT_PUBLIC_API_TIMEOUT=30000

# ================================
# 存储配置
# ================================

# LocalStorage 最大容量（MB）
# NEXT_PUBLIC_MAX_STORAGE_SIZE=50

# 数据缓存过期时间（小时）
# NEXT_PUBLIC_CACHE_EXPIRY_HOURS=24

# ================================
# GitHub Pages 部署配置
# ================================
# 仅在部署到 GitHub Pages 时需要

# 仓库名称（作为基础路径）
# NEXT_PUBLIC_BASE_PATH=/insuralytics

# ================================
# 开发工具配置
# ================================

# 禁用遥测数据收集
NEXT_TELEMETRY_DISABLED=1

# Node.js 内存限制（在 package.json scripts 中设置）
# NODE_OPTIONS=--max-old-space-size=2048
